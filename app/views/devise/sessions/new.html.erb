<h2 class="mb-4">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control mb-3" },
                wrapper_html: { class: "form-group" },
                label_html: { class: "form-label" } %>
                
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form-control mb-3" },
                wrapper_html: { class: "form-group" },
                label_html: { class: "form-label" } %>
                
    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.input :remember_me, 
                    as: :boolean,
                    input_html: { class: "form-check-input" },
                    label_html: { class: "form-check-label" } %>
      </div>
    <% end %>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="mt-3">
  <%= render "devise/shared/links" %>
</div>